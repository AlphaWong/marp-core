{
  "name": "@marp-team/marp-core",
  "version": "0.0.0",
  "description": "The core of Marp tools",
  "main": "lib/marp.js",
  "repository": "https://github.com/marp-team/marp-core",
  "author": {
    "name": "Marp team",
    "url": "https://github.com/marp-team"
  },
  "contributors": [
    {
      "name": "Yuki Hattori",
      "url": "https://github.com/yhatt"
    }
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn --silent clean && rollup -c",
    "check-ts": "tsc --noEmit",
    "clean": "rimraf lib",
    "format": "prettier \"**/*.{css,js,json,md,scss,ts}\"",
    "format:check": "yarn --silent format -l",
    "format:write": "yarn --silent format --write",
    "lint:ts": "tslint \"{src,test}/**/*.ts\"",
    "lint:css": "stylelint \"themes/**/*.{css,scss}\"",
    "test": "jest",
    "watch": "rollup -w -c"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "autoprefixer": "^8.6.0",
    "github-markdown-css": "^2.10.0",
    "jest": "^23.1.0",
    "jest-junit": "^5.0.0",
    "node-sass": "^4.9.0",
    "prettier": "^1.13.4",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-typescript": "^0.8.1",
    "stylelint": "^9.2.1",
    "stylelint-config-prettier": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@marp-team/marpit": "^0.0.7"
  }
}
