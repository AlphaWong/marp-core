{
  "name": "@marp-team/marp-core",
  "version": "0.4.1",
  "description": "The core of Marp tools",
  "license": "MIT",
  "author": {
    "name": "Marp team",
    "url": "https://github.com/marp-team"
  },
  "contributors": [
    {
      "name": "Yuki Hattori",
      "url": "https://github.com/yhatt"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marp-team/marp-core"
  },
  "main": "lib/marp.js",
  "marpBrowser": "lib/browser.js",
  "types": "types/marp.d.ts",
  "files": [
    "lib/",
    "types/"
  ],
  "engines": {
    "node": ">=6.14.4"
  },
  "scripts": {
    "build": "yarn --silent clean && rollup -c",
    "check-audit": "yarn audit",
    "check-ts": "tsc --noEmit",
    "clean": "rimraf lib",
    "format": "prettier \"**/*.{css,js,json,md,scss,ts,yaml,yml}\"",
    "format:check": "yarn --silent format -l",
    "format:write": "yarn --silent format --write",
    "lint:ts": "tslint \"{src,test}/**/*.ts\"",
    "lint:css": "stylelint \"{src,themes}/**/*.{css,scss}\"",
    "prepack": "npm-run-all --npm-path yarn --parallel check-audit check-ts format:check lint:* test:coverage --parallel build types",
    "preversion": "npm-run-all --npm-path yarn --parallel check-audit check-ts format:check lint:* test:coverage",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "types": "rimraf types && tsc --declaration --emitDeclarationOnly --outDir types",
    "version": "node version.js && git add -A CHANGELOG.md",
    "watch": "rollup -w -c"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.10",
    "@types/jest": "^23.3.11",
    "autoprefixer": "^9.4.3",
    "cheerio": "^1.0.0-rc.2",
    "codecov": "^3.1.0",
    "cssnano": "^4.1.8",
    "github-markdown-css": "^2.10.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-url": "^8.0.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "rollup": "^1.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^1.6.3",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.4",
    "ts-jest": "23.10.5",
    "tslib": "^1.9.3",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@marp-team/marpit": "^0.5.0",
    "@marp-team/marpit-svg-polyfill": "^0.2.0",
    "emoji-regex": "^7.0.3",
    "highlight.js": "^9.13.1",
    "katex": "^0.10.0",
    "markdown-it": "^8.4.2",
    "markdown-it-emoji": "^1.4.0",
    "postcss": "^7.0.7",
    "twemoji": "^11.2.0",
    "xss": "^1.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
