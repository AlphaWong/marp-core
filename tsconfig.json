{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2016", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    // TODO: Marp team does not allow to enable "skipLibCheck". Please revert when improved MathJax typing.
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["src"]
}
